###############################################
# Ejemplo de variables de entorno para Neon   #
###############################################

# Perfil activo de Spring
SPRING_PROFILES_ACTIVE=dev

# Datasource (Neon PostgreSQL)
# Reemplaza <HOST>, <DB>, <USER>, <PASSWORD> por tus valores reales
# URI JDBC recomendado con SSL requerido
SPRING_DATASOURCE_URL=jdbc:postgresql://ep-mute-hat-a8eke3t8-pooler.eastus2.azure.neon.tech/neondb?sslmode=require
SPRING_DATASOURCE_USERNAME=neondb_owner
SPRING_DATASOURCE_PASSWORD=REEMPLAZAR_CON_TU_PASSWORD
SPRING_DATASOURCE_DRIVER=org.postgresql.Driver

# Estrategia de DDL de JPA
# En desarrollo puedes usar 'update'; en producción se recomienda 'validate'
SPRING_JPA_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# Puerto del servidor
SERVER_PORT=8081

# JWT (reemplazar por valores seguros)
JWT_SECRET=REEMPLAZAR_CON_SECRETO_JWT
JWT_EXPIRATION=3600000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

