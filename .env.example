###############################################
# GoHost Backend — Variables de entorno (Railway / Local)
# Copia estos valores en Railway (Service: Backend) y ajusta credenciales.
###############################################

# Perfil
# Usa exactamente "prod" (minúsculas)
SPRING_PROFILES_ACTIVE=prod

# Puerto
# En Railway se inyecta PORT automáticamente; SERVER_PORT es fallback local
SERVER_PORT=8080

# Base de datos (PostgreSQL / Neon / Railway Postgres)
# No uses comillas en los valores.
SPRING_DATASOURCE_URL=jdbc:postgresql://ep-mute-hat-a8eke3t8-pooler.eastus2.azure.neon.tech/neondb?sslmode=require&channel_binding=require
SPRING_DATASOURCE_USERNAME=neondb_owner
SPRING_DATASOURCE_PASSWORD=REEMPLAZAR_CON_TU_PASSWORD
SPRING_DATASOURCE_DRIVER=org.postgresql.Driver

# JPA / Flyway
# En producción: si necesitas crear columnas, usa 'update'
SPRING_JPA_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_FLYWAY_ENABLED=false

# CORS — agrega el dominio del frontend en Railway
# No uses comillas ni backticks; incluye también orígenes locales.
CORS_ALLOWED_ORIGINS=https://front-gohost-production.up.railway.app,http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# JWT
# Secreto robusto (Base64, >=32 bytes al decodificar) — sin comillas
JWT_SECRET=nC8iVnJ0vKZ3pTq5WmY2bHf9sDd4RaLtXyP1QoU7MzE=
JWT_EXPIRATION=3600000

# Cloudinary (si aplica)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=gohost/imagenes
CLOUDINARY_MAX_SIZE=5242880

# Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SECURITY=INFO

